<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="846.0" prefWidth="1217.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.poo.sistemanotificaciones.ViewController.AdminViewController">
   <children>
      <!-- Fondo de la interfaz -->
      <ImageView fitHeight="846.0" fitWidth="1317.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Admin.png" />
         </image>
      </ImageView>

      <!-- Lado izquierdo: Lista de administradores -->
      <ListView fx:id="ListViewAdmins" layoutX="404.0" layoutY="265.0" prefHeight="300.0" prefWidth="300.0" />

      <!-- Lado izquierdo: Notificaciones del administrador actual -->
      <ListView fx:id="ListViewNotifications" layoutX="37.0" layoutY="265.0" prefHeight="300.0" prefWidth="300.0" />

      <!-- Lado izquierdo: Botones para eliminar notificación y cerrar sesión -->
      <Button fx:id="btnDeleteNotification" layoutX="145.0" layoutY="765.0" mnemonicParsing="false" onAction="#onDeleteNotification" prefHeight="66.0" prefWidth="140.0" text="Eliminar Notif">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnLogout" layoutX="442.0" layoutY="765.0" mnemonicParsing="false" onAction="#onLogout" prefHeight="66.0" prefWidth="140.0" text="Cerrar Sesión">
         <font>
            <Font size="18.0" />
         </font>
      </Button>

      <!-- Lado derecho: Selección de tipo de evento y envío de mensaje -->
      <ComboBox fx:id="boxEventType" layoutX="806.0" layoutY="390.0" prefHeight="66.0" prefWidth="360.0" promptText="Seleccione un tipo de evento" />
      <TextField fx:id="txfEventMessage" layoutX="806.0" layoutY="574.0" prefHeight="73.0" prefWidth="366.0" promptText="Escriba su mensaje aquí" />
      <Button fx:id="btnPublish" layoutX="890.0" layoutY="732.0" mnemonicParsing="false" onAction="#onPublish" prefHeight="66.0" prefWidth="199.0" text="Publicar">
         <font>
            <Font size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
